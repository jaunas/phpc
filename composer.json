{
    "name": "jaunas/php-compiler",
    "description": "PHP to Rust translator",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Jaunas\\PhpCompiler\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jaunas\\PhpCompiler\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.2",
        "nikic/php-parser": "^4.17"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.4",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "scripts": {
        "pre-install-cmd": [
            "ln -s ../tests/fixtures rust-php/examples"
        ],
        "phpunit": "phpunit",
        "coverage": "XDEBUG_MODE=coverage phpunit --coverage-html=coverage",
        "phpcs": "phpcs && echo 'OK'",
        "phpcbf": "phpcbf",
        "phpstan": "phpstan analyse -c phpstan.dist.neon",
        "test": ["@phpcs", "@phpstan", "@phpunit"]
    }
}
